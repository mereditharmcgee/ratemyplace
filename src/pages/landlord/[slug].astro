---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import StarRating from '../../components/ratings/StarRating.astro';
import ScoreCard from '../../components/ratings/ScoreCard.astro';
import ReviewCard from '../../components/reviews/ReviewCard.astro';
import { getDB } from '../../lib/db';

const { slug } = Astro.params;

let landlord: any = null;
let scores: any = null;
let buildings: any[] = [];
let recentReviews: any[] = [];

try {
  const db = getDB((Astro.locals as any).runtime);

  const landlordResult = await db.prepare(`
    SELECT * FROM landlords WHERE slug = ?
  `).bind(slug).first();

  if (landlordResult) {
    landlord = landlordResult;

    const scoresResult = await db.prepare(`
      SELECT * FROM landlord_scores WHERE landlord_id = ?
    `).bind(landlord.id).first();

    scores = scoresResult;

    const buildingsResult = await db.prepare(`
      SELECT b.*, bs.review_count, bs.avg_overall
      FROM buildings b
      LEFT JOIN building_scores bs ON b.id = bs.building_id
      WHERE b.landlord_id = ?
      ORDER BY bs.review_count DESC NULLS LAST
    `).bind(landlord.id).all();

    buildings = buildingsResult.results || [];

    // Fetch recent reviews across all buildings for this landlord
    if (buildings.length > 0) {
      const buildingIds = buildings.map(b => b.id);
      const placeholders = buildingIds.map(() => '?').join(',');
      const reviewsResult = await db.prepare(`
        SELECT r.*, b.address as building_address, b.slug as building_slug
        FROM reviews r
        JOIN buildings b ON r.building_id = b.id
        WHERE r.building_id IN (${placeholders})
          AND r.status = 'approved'
        ORDER BY r.created_at DESC
        LIMIT 5
      `).bind(...buildingIds).all();

      recentReviews = reviewsResult.results || [];
    }
  }
} catch (error) {
  console.error('Error loading landlord:', error);
}

if (!landlord) {
  return Astro.redirect('/404');
}

// Calculate aggregated issue percentages from building scores
const totalReviews = buildings.reduce((sum, b) => sum + (b.review_count || 0), 0);
---

<BaseLayout title={landlord.name} description={`Reviews for landlord ${landlord.name}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="text-sm text-gray-500 mb-4">
        <a href="/" class="hover:text-teal-600">Home</a>
        <span class="mx-2">/</span>
        <a href="/search" class="hover:text-teal-600">Search</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">{landlord.name}</span>
      </nav>

      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div>
              <h1 class="text-3xl font-bold text-gray-900">{landlord.name}</h1>
              <p class="text-sm text-gray-500">Landlord / Property Owner</p>
            </div>
          </div>
          {landlord.description && (
            <p class="text-gray-600 mt-2 max-w-2xl">{landlord.description}</p>
          )}
          <div class="mt-4 flex flex-wrap gap-4 text-sm text-gray-500">
            {landlord.website && (
              <a href={landlord.website} target="_blank" rel="noopener noreferrer" class="hover:text-teal-600 flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
                Website
              </a>
            )}
            {landlord.phone && (
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {landlord.phone}
              </span>
            )}
            {landlord.email && (
              <a href={`mailto:${landlord.email}`} class="hover:text-teal-600 flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                {landlord.email}
              </a>
            )}
          </div>
        </div>

        <div class="text-right">
          {scores?.avg_overall ? (
            <div>
              <div class="text-4xl font-bold text-teal-600">{scores.avg_overall.toFixed(1)}</div>
              <StarRating rating={scores.avg_overall} />
              <p class="text-sm text-gray-500 mt-1">
                {scores.review_count} review{scores.review_count !== 1 ? 's' : ''} across {scores.building_count} building{scores.building_count !== 1 ? 's' : ''}
              </p>
            </div>
          ) : (
            <p class="text-gray-400">No reviews yet</p>
          )}
        </div>
      </div>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Properties Section -->
        <div class="mb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">
            Properties ({buildings.length})
          </h2>

          {buildings.length > 0 ? (
            <div class="space-y-4">
              {buildings.map((building) => (
                <a
                  href={`/building/${building.slug}`}
                  class="block bg-white border border-gray-200 rounded-lg p-6 hover:border-teal-300 hover:shadow-md transition-all"
                >
                  <div class="flex justify-between items-start">
                    <div>
                      <h3 class="text-lg font-semibold text-gray-900">{building.address}</h3>
                      <p class="text-gray-600">
                        {building.neighborhood && `${building.neighborhood}, `}{building.city}
                      </p>
                    </div>
                    <div class="text-right">
                      {building.avg_overall ? (
                        <div>
                          <div class="text-2xl font-bold text-teal-600">{building.avg_overall.toFixed(1)}</div>
                          <div class="text-sm text-gray-500">
                            {building.review_count} review{building.review_count !== 1 ? 's' : ''}
                          </div>
                        </div>
                      ) : (
                        <span class="text-sm text-gray-400">No reviews</span>
                      )}
                    </div>
                  </div>
                </a>
              ))}
            </div>
          ) : (
            <div class="bg-gray-50 rounded-lg p-8 text-center">
              <p class="text-gray-600">No properties listed for this landlord yet.</p>
            </div>
          )}
        </div>

        <!-- Recent Reviews Section -->
        {recentReviews.length > 0 && (
          <div>
            <h2 class="text-xl font-semibold text-gray-900 mb-4">
              Recent Reviews
            </h2>
            <div class="space-y-4">
              {recentReviews.map((review) => (
                <div>
                  <div class="mb-2">
                    <a href={`/building/${review.building_slug}`} class="text-sm text-teal-600 hover:text-teal-800">
                      {review.building_address}
                    </a>
                  </div>
                  <ReviewCard review={review} />
                </div>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        {scores && <ScoreCard scores={scores} type="landlord" />}

        {scores && scores.pct_would_recommend !== null && (
          <div class="bg-white rounded-lg border border-gray-200 p-6 mt-6">
            <h3 class="font-semibold text-gray-900 mb-4">Recommendation Rate</h3>
            <div class="text-center">
              <div class="text-3xl font-bold text-teal-600">
                {Math.round(scores.pct_would_recommend)}%
              </div>
              <p class="text-sm text-gray-500">of tenants would recommend</p>
            </div>
          </div>
        )}

        {scores && scores.pct_deposit_issues > 0 && (
          <div class="bg-white rounded-lg border border-gray-200 p-6 mt-6">
            <h3 class="font-semibold text-gray-900 mb-4">Common Issues</h3>
            <ul class="space-y-2 text-sm">
              <li class="flex justify-between">
                <span class="text-gray-600">Deposit issues</span>
                <span class="text-yellow-600 font-medium">{Math.round(scores.pct_deposit_issues)}%</span>
              </li>
            </ul>
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>
