---
import AdminLayout from '../../components/admin/AdminLayout.astro';
import BuildingsTable from '../../components/admin/BuildingsTable';

const user = Astro.locals.user;

// Redirect if not logged in
if (!user) {
  return Astro.redirect('/auth/signin');
}

// Redirect if not admin
if (!user.isAdmin) {
  return Astro.redirect('/');
}
---

<AdminLayout title="Building Management" currentPage="buildings">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Building Management</h1>
      <p class="text-gray-600 mt-1">View and manage all buildings in the system.</p>
    </div>

    <BuildingsTable client:load />
  </div>
</AdminLayout>
