---
import AdminLayout from '../../components/admin/AdminLayout.astro';
import ReviewsTable from '../../components/admin/ReviewsTable';

const user = Astro.locals.user;

// Redirect if not logged in
if (!user) {
  return Astro.redirect('/auth/signin');
}

// Redirect if not admin
if (!user.isAdmin) {
  return Astro.redirect('/');
}

// Get status filter from URL
const status = Astro.url.searchParams.get('status') || 'all';
---

<AdminLayout title="Review Management" currentPage="reviews">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Review Management</h1>
      <p class="text-gray-600 mt-1">View, approve, and manage all reviews.</p>
    </div>

    <ReviewsTable client:load initialStatus={status} />
  </div>
</AdminLayout>
