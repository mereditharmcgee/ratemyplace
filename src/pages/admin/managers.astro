---
import AdminLayout from '../../components/admin/AdminLayout.astro';
import ManagersTable from '../../components/admin/ManagersTable';

const user = Astro.locals.user;

// Redirect if not logged in
if (!user) {
  return Astro.redirect('/auth/signin');
}

// Redirect if not admin
if (!user.isAdmin) {
  return Astro.redirect('/');
}
---

<AdminLayout title="Property Manager Management" currentPage="managers">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Property Manager Management</h1>
      <p class="text-gray-600 mt-1">View and manage all property managers in the system.</p>
    </div>

    <ManagersTable client:load />
  </div>
</AdminLayout>
