---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import StarRating from '../../components/ratings/StarRating.astro';
import ReviewCard from '../../components/reviews/ReviewCard.astro';
import ScoreCard from '../../components/ratings/ScoreCard.astro';
import { getDB } from '../../lib/db';
import { calculateBuildingAverages, calculateDomainScores } from '../../lib/scoring';

const { slug } = Astro.params;

let building: any = null;
let scores: any = null;
let reviews: any[] = [];
let landlord: any = null;

// Unit type display order and labels
const unitTypeOrder = ['studio', '1br', '2br', '3br', '4br+', 'house'];
const unitTypeLabels: Record<string, string> = {
  'studio': 'Studio',
  '1br': '1 Bedroom',
  '2br': '2 Bedrooms',
  '3br': '3 Bedrooms',
  '4br+': '4+ Bedrooms',
  'house': 'House'
};

try {
  const db = getDB((Astro.locals as any).runtime);

  const buildingResult = await db.prepare(`
    SELECT b.*,
           l.name as landlord_name, l.slug as landlord_slug,
           pm.name as property_manager_name, pm.slug as property_manager_slug
    FROM buildings b
    LEFT JOIN landlords l ON b.landlord_id = l.id
    LEFT JOIN property_managers pm ON b.property_manager_id = pm.id
    WHERE b.slug = ?
  `).bind(slug).first();

  if (buildingResult) {
    building = buildingResult;

    const scoresResult = await db.prepare(`
      SELECT * FROM building_scores WHERE building_id = ?
    `).bind(building.id).first();

    scores = scoresResult;

    const reviewsResult = await db.prepare(`
      SELECT * FROM reviews
      WHERE building_id = ? AND status = 'approved'
      ORDER BY created_at DESC
      LIMIT 50
    `).bind(building.id).all();

    reviews = reviewsResult.results || [];

    // If we have reviews but building_scores doesn't have domain scores,
    // calculate them from the reviews
    if (reviews.length > 0 && scores && !scores.avg_unit && !scores.avg_building && !scores.avg_landlord) {
      const calculatedScores = calculateBuildingAverages(reviews);
      scores = { ...scores, ...calculatedScores };
    } else if (reviews.length > 0 && !scores) {
      // No building_scores record at all, calculate everything
      scores = calculateBuildingAverages(reviews);
    }
  }
} catch (error) {
  console.error('Error loading building:', error);
}

if (!building) {
  return Astro.redirect('/404');
}

// Group reviews by unit (unit_number if available, otherwise unit_type)
interface UnitStats {
  unitKey: string;        // Unique key for grouping
  unitType: string;       // The unit type (studio, 1br, etc.)
  unitNumber: string | null;  // The unit number if specified
  displayName: string;    // Display name for the unit
  reviewCount: number;
  avgScore: number;
  minRent: number | null;
  maxRent: number | null;
  wouldRecommendPct: number;
  reviews: any[];
}

const reviewsByUnit = new Map<string, UnitStats>();

reviews.forEach(review => {
  const unitType = review.unit_type || 'unknown';
  const unitNumber = review.unit_number || null;

  // Create a unique key - if unit_number exists, use type+number, otherwise just type
  const unitKey = unitNumber ? `${unitType}:${unitNumber}` : unitType;

  // Create display name
  const typeLabel = unitTypeLabels[unitType] || unitType;
  const displayName = unitNumber ? `Unit ${unitNumber} (${typeLabel})` : typeLabel;

  if (!reviewsByUnit.has(unitKey)) {
    reviewsByUnit.set(unitKey, {
      unitKey,
      unitType,
      unitNumber,
      displayName,
      reviewCount: 0,
      avgScore: 0,
      minRent: null,
      maxRent: null,
      wouldRecommendPct: 0,
      reviews: []
    });
  }

  const stats = reviewsByUnit.get(unitKey)!;
  stats.reviews.push(review);
  stats.reviewCount++;
});

// Calculate aggregated stats for each unit using weighted scoring
reviewsByUnit.forEach((stats) => {
  // Calculate weighted average score using the same methodology
  let scoreSum = 0;
  let scoreCount = 0;
  stats.reviews.forEach(review => {
    const domainScores = calculateDomainScores(review);
    if (domainScores.overall !== null) {
      scoreSum += domainScores.overall;
      scoreCount++;
    } else if (review.overall_score) {
      // Fallback to stored overall_score if available
      scoreSum += review.overall_score;
      scoreCount++;
    }
  });
  stats.avgScore = scoreCount > 0 ? scoreSum / scoreCount : 0;

  const rents = stats.reviews.filter(r => r.rent_amount).map(r => r.rent_amount);
  if (rents.length > 0) {
    stats.minRent = Math.min(...rents);
    stats.maxRent = Math.max(...rents);
  }

  // Check both old and new would_recommend fields
  const recommends = stats.reviews.filter(r =>
    r.would_recommend === 1 || r.would_recommend_new === 'yes'
  ).length;
  stats.wouldRecommendPct = stats.reviewCount > 0 ? (recommends / stats.reviewCount) * 100 : 0;
});

// Sort units: first by unit type order, then by unit number
const sortedUnits = Array.from(reviewsByUnit.values())
  .sort((a, b) => {
    const typeOrderA = unitTypeOrder.indexOf(a.unitType);
    const typeOrderB = unitTypeOrder.indexOf(b.unitType);
    if (typeOrderA !== typeOrderB) return typeOrderA - typeOrderB;
    // If same type, sort by unit number (nulls last)
    if (a.unitNumber && b.unitNumber) return a.unitNumber.localeCompare(b.unitNumber);
    if (a.unitNumber) return -1;
    if (b.unitNumber) return 1;
    return 0;
  });
---

<BaseLayout title={building.address} description={`Reviews for ${building.address} in ${building.neighborhood || building.city}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="text-sm text-gray-500 mb-4">
        <a href="/" class="hover:text-teal-600">Home</a>
        <span class="mx-2">/</span>
        <a href="/search" class="hover:text-teal-600">Search</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">{building.address}</span>
      </nav>

      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">{building.address}</h1>
          <p class="text-lg text-gray-600">
            {building.neighborhood && `${building.neighborhood}, `}{building.city}, {building.state} {building.zip_code}
          </p>
          {(building.landlord_name || building.property_manager_name) && (
            <div class="mt-2 flex flex-wrap gap-x-4 gap-y-1 text-sm text-gray-500">
              {building.landlord_name && (
                <span>
                  Owner:{' '}
                  <a href={`/landlord/${building.landlord_slug}`} class="text-teal-600 hover:text-teal-800 font-medium">
                    {building.landlord_name}
                  </a>
                </span>
              )}
              {building.property_manager_name && (
                <span>
                  Managed by:{' '}
                  <a href={`/property-manager/${building.property_manager_slug}`} class="text-purple-600 hover:text-purple-800 font-medium">
                    {building.property_manager_name}
                  </a>
                </span>
              )}
            </div>
          )}
        </div>

        <div class="flex flex-col items-end">
          {scores?.avg_overall ? (
            <div class="text-right">
              <div class="text-4xl font-bold text-teal-600">{scores.avg_overall.toFixed(1)}</div>
              <StarRating rating={scores.avg_overall} />
              <p class="text-sm text-gray-500 mt-1">
                {scores.review_count} review{scores.review_count !== 1 ? 's' : ''}
              </p>
            </div>
          ) : (
            <p class="text-gray-400">No reviews yet</p>
          )}

          <a
            href={`/review/new?building=${building.id}`}
            class="mt-4 inline-block bg-teal-600 text-white px-6 py-2 rounded-lg hover:bg-teal-700 transition-colors"
          >
            Write a Review
          </a>
        </div>
      </div>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Building Details -->
        <div class="bg-white rounded-lg border border-gray-200 p-6 mb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Building Details</h2>
          <dl class="grid grid-cols-2 gap-4">
            {building.building_type && (
              <>
                <dt class="text-gray-500">Type</dt>
                <dd class="text-gray-900">{building.building_type}</dd>
              </>
            )}
            {building.year_built && (
              <>
                <dt class="text-gray-500">Year Built</dt>
                <dd class="text-gray-900">{building.year_built}</dd>
              </>
            )}
            {building.unit_count && (
              <>
                <dt class="text-gray-500">Units</dt>
                <dd class="text-gray-900">{building.unit_count}</dd>
              </>
            )}
          </dl>
        </div>

        <!-- Units Section -->
        {sortedUnits.length > 0 && (
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">
              Units Reviewed ({sortedUnits.length} unit{sortedUnits.length !== 1 ? 's' : ''})
            </h2>
            <div class="space-y-3" id="unit-list">
              {sortedUnits.map((unitStats, index) => (
                <div class="unit-section" data-unit-key={unitStats.unitKey}>
                  <div
                    class="unit-card bg-white border border-gray-200 rounded-lg p-4 cursor-pointer hover:border-teal-300 hover:shadow-sm transition-all"
                    data-unit-key={unitStats.unitKey}
                    data-expanded={index === 0 ? "true" : "false"}
                  >
                    <div class="flex items-center justify-between">
                      <div class="flex items-center gap-3">
                        <div class={`w-10 h-10 rounded-lg flex items-center justify-center ${unitStats.unitNumber ? 'bg-teal-100' : 'bg-gray-100'}`}>
                          {unitStats.unitNumber ? (
                            <span class="text-teal-700 font-bold text-sm">{unitStats.unitNumber}</span>
                          ) : (
                            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                          )}
                        </div>
                        <div>
                          <h4 class="font-semibold text-gray-900">{unitStats.displayName}</h4>
                          <p class="text-sm text-gray-500">
                            {unitStats.reviewCount} review{unitStats.reviewCount !== 1 ? 's' : ''}
                          </p>
                        </div>
                      </div>

                      <div class="flex items-center gap-4">
                        {(unitStats.minRent || unitStats.maxRent) && (
                          <div class="text-right hidden sm:block">
                            <p class="text-xs text-gray-500">Rent</p>
                            <p class="text-sm font-medium text-gray-900">
                              {unitStats.minRent === unitStats.maxRent
                                ? `$${unitStats.minRent?.toLocaleString()}`
                                : `$${unitStats.minRent?.toLocaleString()} - $${unitStats.maxRent?.toLocaleString()}`}
                            </p>
                          </div>
                        )}

                        <div class="text-right">
                          <div class="flex items-center gap-1">
                            <span class="text-lg font-bold text-teal-600">{unitStats.avgScore.toFixed(1)}</span>
                            <StarRating rating={unitStats.avgScore} size="sm" />
                          </div>
                          <p class="text-xs text-gray-500">
                            {Math.round(unitStats.wouldRecommendPct)}% recommend
                          </p>
                        </div>

                        <svg
                          class="w-5 h-5 text-gray-400 chevron-icon transition-transform"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                      </div>
                    </div>
                  </div>
                  <div
                    class={`unit-reviews mt-4 space-y-4 pl-4 border-l-2 border-teal-200 ${index === 0 ? '' : 'hidden'}`}
                    data-reviews-for={unitStats.unitKey}
                  >
                    {unitStats.reviews.map((review) => (
                      <ReviewCard review={review} />
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- No Reviews State -->
        {reviews.length === 0 && (
          <div class="bg-gray-50 rounded-lg p-8 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
            <p class="text-gray-600 mb-4">No reviews yet for this building.</p>
            <a
              href={`/review/new?building=${building.id}`}
              class="inline-block bg-teal-600 text-white px-6 py-2 rounded-lg hover:bg-teal-700 transition-colors"
            >
              Be the first to write a review
            </a>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        {scores && <ScoreCard scores={scores} type="building" />}

        {scores && scores.review_count > 0 && (
          <div class="bg-white rounded-lg border border-gray-200 p-6 mt-6">
            <h3 class="font-semibold text-gray-900 mb-4">Common Issues Reported</h3>
            <ul class="space-y-2 text-sm">
              {scores.pct_pest_issues > 0 && (
                <li class="flex justify-between">
                  <span class="text-gray-600">Pest issues</span>
                  <span class="text-red-600 font-medium">{Math.round(scores.pct_pest_issues)}%</span>
                </li>
              )}
              {scores.pct_heat_issues > 0 && (
                <li class="flex justify-between">
                  <span class="text-gray-600">Heat/hot water issues</span>
                  <span class="text-orange-600 font-medium">{Math.round(scores.pct_heat_issues)}%</span>
                </li>
              )}
              {scores.pct_water_issues > 0 && (
                <li class="flex justify-between">
                  <span class="text-gray-600">Water/plumbing issues</span>
                  <span class="text-blue-600 font-medium">{Math.round(scores.pct_water_issues)}%</span>
                </li>
              )}
              {scores.pct_deposit_issues > 0 && (
                <li class="flex justify-between">
                  <span class="text-gray-600">Deposit issues</span>
                  <span class="text-yellow-600 font-medium">{Math.round(scores.pct_deposit_issues)}%</span>
                </li>
              )}
            </ul>
            {scores.pct_pest_issues === 0 && scores.pct_heat_issues === 0 && scores.pct_water_issues === 0 && scores.pct_deposit_issues === 0 && (
              <p class="text-gray-500 text-sm">No issues reported</p>
            )}
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Handle collapsible unit sections
  document.querySelectorAll('.unit-card').forEach(card => {
    card.addEventListener('click', () => {
      const unitKey = card.getAttribute('data-unit-key');
      const reviewsContainer = document.querySelector(`[data-reviews-for="${unitKey}"]`);
      const isExpanded = card.getAttribute('data-expanded') === 'true';
      const chevron = card.querySelector('.chevron-icon');

      if (reviewsContainer) {
        if (isExpanded) {
          reviewsContainer.classList.add('hidden');
          card.setAttribute('data-expanded', 'false');
          chevron?.classList.remove('rotate-180');
        } else {
          reviewsContainer.classList.remove('hidden');
          card.setAttribute('data-expanded', 'true');
          chevron?.classList.add('rotate-180');
        }
      }
    });
  });

  // Set initial chevron state for expanded cards
  document.querySelectorAll('.unit-card[data-expanded="true"] .chevron-icon').forEach(chevron => {
    chevron.classList.add('rotate-180');
  });
</script>
