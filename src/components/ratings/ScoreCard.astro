---
interface Props {
  scores: any;
  type: 'building' | 'landlord';
  grouped?: boolean;
}

const { scores, type, grouped = true } = Astro.props;

const buildingCategories = [
  { key: 'avg_building_quality', label: 'Building Quality' },
  { key: 'avg_maintenance', label: 'Maintenance' },
  { key: 'avg_pest_control', label: 'Pest Control' },
  { key: 'avg_safety', label: 'Safety' },
  { key: 'avg_noise', label: 'Noise Level' },
  { key: 'avg_amenities', label: 'Amenities' },
];

const landlordCategories = [
  { key: 'avg_landlord_responsiveness', label: 'Responsiveness' },
  { key: 'avg_landlord_communication', label: 'Communication' },
  { key: 'avg_landlord_fairness', label: 'Fairness' },
  { key: 'avg_lease_clarity', label: 'Lease Clarity' },
  { key: 'avg_deposit_handling', label: 'Deposit Handling' },
];

const valueCategory = [
  { key: 'avg_rent_value', label: 'Rent Value' },
];

function getScoreColor(score: number): string {
  if (score >= 4) return 'bg-green-500';
  if (score >= 3) return 'bg-yellow-500';
  if (score >= 2) return 'bg-orange-500';
  return 'bg-red-500';
}

// Filter available scores
const availableBuilding = buildingCategories.filter(c => scores[c.key] != null);
const availableLandlord = landlordCategories.filter(c => scores[c.key] != null);
const availableValue = valueCategory.filter(c => scores[c.key] != null);
---

<div class="bg-white rounded-lg border border-gray-200 p-6">
  <h3 class="font-semibold text-gray-900 mb-4">Rating Breakdown</h3>

  {grouped && type === 'building' ? (
    <div class="space-y-6">
      <!-- Building Scores Section -->
      {availableBuilding.length > 0 && (
        <div>
          <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3 flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            Building
          </h4>
          <div class="space-y-3">
            {availableBuilding.map((category) => {
              const score = scores[category.key];
              return (
                <div>
                  <div class="flex justify-between items-center mb-1">
                    <span class="text-sm text-gray-600">{category.label}</span>
                    <span class="text-sm font-medium text-gray-900">{score.toFixed(1)}</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div
                      class={`h-2 rounded-full ${getScoreColor(score)}`}
                      style={`width: ${(score / 5) * 100}%`}
                    ></div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      )}

      <!-- Landlord Scores Section -->
      {availableLandlord.length > 0 && (
        <div>
          <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3 flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Landlord
          </h4>
          <div class="space-y-3">
            {availableLandlord.map((category) => {
              const score = scores[category.key];
              return (
                <div>
                  <div class="flex justify-between items-center mb-1">
                    <span class="text-sm text-gray-600">{category.label}</span>
                    <span class="text-sm font-medium text-gray-900">{score.toFixed(1)}</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div
                      class={`h-2 rounded-full ${getScoreColor(score)}`}
                      style={`width: ${(score / 5) * 100}%`}
                    ></div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      )}

      <!-- Value Score Section -->
      {availableValue.length > 0 && (
        <div>
          <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3 flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Value
          </h4>
          <div class="space-y-3">
            {availableValue.map((category) => {
              const score = scores[category.key];
              return (
                <div>
                  <div class="flex justify-between items-center mb-1">
                    <span class="text-sm text-gray-600">{category.label}</span>
                    <span class="text-sm font-medium text-gray-900">{score.toFixed(1)}</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div
                      class={`h-2 rounded-full ${getScoreColor(score)}`}
                      style={`width: ${(score / 5) * 100}%`}
                    ></div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      )}
    </div>
  ) : (
    <div class="space-y-3">
      {[...availableLandlord].map((category) => {
        const score = scores[category.key];
        return (
          <div>
            <div class="flex justify-between items-center mb-1">
              <span class="text-sm text-gray-600">{category.label}</span>
              <span class="text-sm font-medium text-gray-900">{score.toFixed(1)}</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div
                class={`h-2 rounded-full ${getScoreColor(score)}`}
                style={`width: ${(score / 5) * 100}%`}
              ></div>
            </div>
          </div>
        );
      })}
    </div>
  )}
</div>
